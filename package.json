{
  "name": "sharp-warriors",
  "version": "1.0.0",
  "description": "Web3 gaming platform with blockchain-based SHARP token rewards on Polygon",
  "main": "index.js",
  "scripts": {
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:contract": "npx hardhat run scripts/deploy-token.js --network polygon",
    "deploy:testnet": "npx hardhat run scripts/deploy-token.js --network mumbai",
    "verify": "npx hardhat verify --network polygon",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "build": "npm install",
    "start": "firebase serve"
  },
  "keywords": [
    "gaming",
    "web3",
    "blockchain",
    "polygon",
    "erc20",
    "tokens",
    "nft",
    "metaverse"
  ],
  "author": "SHARP Warriors Team",
  "license": "MIT",
  "dependencies": {
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "web3": "^1.8.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "firebase-tools": "^13.0.0",
    "hardhat": "^2.27.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.9.3"
  }
}
